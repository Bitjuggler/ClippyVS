<Window x:Name="ClippySpriteContainer" x:Class="Recoding.ClippyVSPackage.SpriteContainer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpriteContainer" Height="93" Width="124" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" HorizontalAlignment="Center" HorizontalContentAlignment="Center" MouseDown="Window_MouseDown" Topmost="True" IsTabStop="False" Closing="ClippySpriteContainer_Closing">
    <Window.Resources>
        <ContextMenu x:Key="cmButton">
			<MenuItem x:Name="cmdRandomIdle" Header="Idle" Click="cmdIdle_Click" />
            <Separator />
            <MenuItem x:Name="cmdClose" Header="Please, leave me alone" Click="cmdClose_Click"  />
        </ContextMenu>
    </Window.Resources>
    <Grid Opacity="1" Width="124" MouseRightButtonUp="Grid_MouseRightButtonUp">
        <Canvas x:Name="ClippyCanvas" HorizontalAlignment="Left" Height="93" VerticalAlignment="Top" Width="124" ClipToBounds="True"/>
    </Grid>
</Window>
